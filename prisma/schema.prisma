generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Session {
  id           Int      @id @default(autoincrement())
  userId       String   @unique
  stageIndex   Int
  bgUrl        String
  minutesInput Int
  timeLeft     Int
  codes        String   @default("{}")  // store JSON as string
  solved       String   @default("{}")  // store JSON as string
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
