generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")  // prisma+postgres URL
  directUrl = env("DIRECT_URL")    // plain postgres URL
}


model Session {
  id           Int      @id @default(autoincrement())
  userId       String   @unique
  stageIndex   Int
  bgUrl        String
  minutesInput Int
  timeLeft     Int
  codes        Json     @default("{}")   // ⬅️ JSON is supported on Postgres
  solved       Json     @default("{}")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
